form{
  background: rgba(#fff,.1);
  width: 325px;
  padding: 15px 40px;
  display: block;
  margin: 20px auto 40px auto;
  font-family: "roboto";
  border-radius: 4px;

  label{
    display: block;
    margin-top: 15px;
    margin-bottom: 3px;
    color: #fff;
    font-weight: 300;
  }
  input, select{
    margin:0 0 0 25px;
    border: none;
    height: 25px;
    border-radius: 5px;
    opacity: .8;
  }
  input[type="submit"]{
    height: auto;
    padding: 8px 16px;
    background: #fff;
    margin-bottom: 20px;
  }
  .inline{
    display: inline;
  }
  .small-input{
    display: inline;
    width: 40px;
    margin: 0 0 0 6px;
  }
  .border-radius-n{
    border-radius: 2px;
    padding: 0;
  }
  input::-webkit-input-placeholder{
    padding-left: 10px;
  }
  input.small-input::-webkit-input-placeholder{
    padding-left: 0px;
  }
  .margin-top-small{
    margin-top: 20px;
  }
  label.error 
    p{
      background: rgba(#fff,.5);
      padding: 5px 5px 5px 10px;
      color: red;
      font-weight: 400;
      border-radius: 3px;
    }
}